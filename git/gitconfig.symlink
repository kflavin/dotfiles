[include]
	path = ~/.gitconfig.local
[alias]
	cm = commit -a
	co = checkout
	current-branch = rev-parse --abbrev-ref HEAD
	d = diff
	glog = log -E -i --grep
	issues = !hub browse -- issues
	mup = !git checkout master && git pull && git checkout -
	rim = !git rebase --interactive $(git merge-base master HEAD)
	riu = !git rebase --interactive $(git upstream)
	sla = log --oneline --decorate --graph --all
	sl = log --date=format:'%D %T' --pretty=format:'%C(yellow)%h%C(reset) - %an [%C(green)%ad%C(reset)] %s'
	uncommit = reset --soft HEAD^
	unstage = reset
	upstream = rev-parse --abbrev-ref --symbolic-full-name @{u}
	ureset = !git upstream && git reset --hard $(git upstream)
[core]
	pager = less -F -X
[hub]
	protocol = https
[fetch]
	prune = true
