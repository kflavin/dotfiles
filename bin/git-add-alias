#!/usr/bin/env ruby

name,value = ARGV[0].split("=")

if !name.empty? and !value.empty?
    puts "Creating alias #{name}='#{value}'"
    system("git config --global alias.#{name} '#{value}'")
else
    puts "Usage: git add-alias co='checkout -b'"
    exit 1
end

